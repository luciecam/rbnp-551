<div class="main-container">
  <div class="index-cards">
    <% @machines.each do |machine| %>
      <div class="card-description">
        <h2><%= link_to machine.name, machine_path(machine) %></h2>
        <%= machine.description %>
        <div class="card-price">
          <p class="card-price-day"><%= machine.price %>â‚¬/ jour</p>
        </div>
        <% if policy(machine).update? %>
          <%= link_to "update info", edit_machine_path(machine) %>
        <% end %>
      </div>
      <% end %>
  </div>
  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
