<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.actu.fr/uploads/2021/01/142489619-233131581751207-2875209039377928422-n.jpg);">
  <div class="row justify-content-center" id="new-machine">
    <div class="col-md-12">
      <div class="form-color"> 
        <h1>Mettre mon appareil en location</h1>
      </div>
      <%= simple_form_for @machine do |f| %>
        <%= f.input :name, label: 'Titre de votre annonce' %>
        <%= f.input :category, label: "Type d'appareil ", collection: ["Barbecue", "Fondue", "Pierrade", "Plancha", "Raclette", "Autre"], include_blank: false, include_hidden: false %>
        <%= f.input :capacity, label: "Nombre de couverts 🍽️" %>
        <%= f.input :description, label: "Description de votre annonce" %>
        <%= f.input :condition, label: "Etat de votre appareil ⚙️", collection: ["Neuf", "Très bon état", "Bon état", "Moyen"] %>
        <%= f.input :address, label: "Votre adresse 🗺️" %>
        <%= f.input :price, label: "Prix de la location (par jour) 💸" %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, label:"Publier mon annonce", class: 'btn btn-discover' %>
      <% end %>
  </div>
</div>
