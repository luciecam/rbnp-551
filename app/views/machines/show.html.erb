
<div class="container">
  <div class = "head-product">
    <h2><%= @machine.name %></h2>
  </div>
  <div class="row justify-content-around">

    <div class="col-7" id="form-product">
      <div class="product-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @machine.photo.key, height: 300, width: 400, crop: :fill %>')"></div>
      <div class="machine-info-row justify-content-around">
        <div class="spef justify-content-start">
          <div class="icon-align">
            <i class="fas fa-bread-slice"></i>
          </div>
          <% JSON.parse(@machine.specifications).drop(1).each do |specification|%>
            <h4><%= specification%></h4>
          <% end %>
        </div>
        <div class="spef justify-content-start">
          <div class="icon-align">
            <i class="fas fa-hand-sparkles"></i>
          </div>
          <h4><%=@machine.condition%></h4>
        </div>
      </div>
      <div class="machine-info-row justify-content-around">
        <div class="spef justify-content-start">
          <div class="icon-align">
            <i class="fas fa-map-marked-alt"></i>
            </div>
          <h4><%=@machine.address%></h4>
        </div>
        <div class="spef justify-content-start">
          <div class="icon-align">
            <i class="fas fa-euro-sign"></i>
          </div>
          <h4><%=@machine.price%></h4>
        </div>
      </div>
      <div id="description-font">
        <h4>Description</h4>
        <p><%=@machine.description%></p>
      </div>
      <%= link_to "Back to all machines", machines_path %>
    </div>
    <div class="col-4 p-0">
      <div id="form-book" class="p-4 sticky-top p-6">
        <h2>Create a new booking</h2>
        <div id="booking-form" data-price="<%= @machine.price %>">
          <%= simple_form_for [@machine, @booking] do |f| %>
            <%= f.input  :start_date, as: :string, required: false, input_html: {id: "range_start"} %>
            <%= f.input  :end_date,   as: :string, required: false, input_html: {id: "range_end"} %>
            <%= f.button :submit, class: 'w-100 mt-3 btn btn-primary' %>
          <% end %>
        </div>
        <div id="total-amount">
      </div>
      </div>
    </div>
  </div>
</div>











