<div class="container"> 
    <%= link_to "Back", machines_path, class: "btn-discover", style: "color: black" %>
  <div class = "head-product"> 
    <h1><%= @machine.name %></h1>
    <h3><%=@machine.address%></h3>
  </div>

  <div class="product-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @machine.photo.key, height: 300, width: 400, crop: :fill %>')">
  </div>
  
  <div class="product-info">
    <div class="product-description">
      <%=@machine.description %>    
    </div>
    <div class="product-details">
      <div class="product-detail">
        <div class="product-specifications">
          <% JSON.parse(@machine.specifications).drop(1).each do |specification|%>
            <div class="product-specification">
              <%= specification %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="product-detail">
        <%=@machine.condition%>
      </div>
    </div>
  </div>
  <div style="text-align: center">
    <%= link_to "Book Machine", new_machine_booking_path(@machine), class: "btn-discover", style: "background-color: green; color: white" %>
  </div>
</div>