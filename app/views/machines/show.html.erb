<div class="container">

  <h1><%= @machine.name %></h1>
  <%= link_to "Back to all machines", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Description (Your machine is great for vegetables, seafood, or meat?)</h2>

      <h3>Specifications</h3>
      <%= cl_image_tag @machine.photo.key, height: 300, width: 400, crop: :fill %>
      <table class="table table-bordered">
        <tbody>
          <thead>
					  <th>Functions (table grill, etc.)</th>
            <th>Numbers of guests (number of spatulas)</th>
						<th>Number of hotplates</th>
						<th>Power (Watts)</th>
            <th>Cable length</th>
						<th>Options</th>
          </thead>
          <%= link_to "book it", new_machine_booking_path(@machine) %>
          <% @machine.bookings.each do |booking| %>
            <tr>
              <td><%= @machine.user %></td>
              <td><%= @machine.description %></td>
              <td>
                <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %>
                
                  <i class="fa fa-trash destroy_booking"></i>
                <% end %>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%#= render "doses/new", machine: @machine, dose: @dose %>
    </div>
  </div>

